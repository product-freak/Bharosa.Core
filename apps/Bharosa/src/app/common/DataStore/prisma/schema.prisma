
    
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["filterJson"]
}

enum RoleTypeEnum {
  ADMIN
  GENERAL_ADMIN
  USER
}

enum UserTypeEnum {
  KITCHEN_STAFF
  PLUMBER
  CARPENTER
  ELECTRICIAN
  GENERAL_ADMIN
}

model Account {
  id              String        @id @default(uuid()) @db.Uuid
  createdAtUtc    DateTime?     @default(now()) @map("created_at_utc")
  updatedAtUtc    DateTime      @updatedAt @map("updated_at_utc")
  isDeleted       Boolean       @default(false) @map("is_deleted")
  username        String?       @db.VarChar(200)
  password        String?       @db.VarChar(100)
  phoneNumber     String?       @db.VarChar(20)
  otpSentToMobile String?       @db.VarChar(20)
  countryCode     String?       @db.VarChar(20)
  role            RoleTypeEnum?
}

model User {
  id           String        @id @default(uuid()) @db.Uuid
  createdAtUtc DateTime?     @default(now()) @map("created_at_utc")
  updatedAtUtc DateTime      @updatedAt @map("updated_at_utc")
  isDeleted    Boolean       @default(false) @map("is_deleted")
  accountId    String        @db.VarChar(100) @map("account_id")
  firstname    String        @db.VarChar(200)
  lastname     String?       @db.VarChar(200)
  email        String        @db.VarChar(200)
  phoneNumber  String?       @db.VarChar(20)
  profileImage String?       @db.VarChar @map("profile_image")
  location     String?
  dob          DateTime?
  userType     UserTypeEnum?
}

  